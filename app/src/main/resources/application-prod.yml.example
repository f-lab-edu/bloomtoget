# ===================================================================
# Production 운영 환경 설정 템플릿
# ===================================================================

spring:
  datasource:
    url: jdbc:mysql://your-prod-db-host:3306/bloomtoget?serverTimezone=Asia/Seoul&characterEncoding=UTF-8
    username: your_db_username
    password: your_db_password

  jpa:
    hibernate:
      ddl-auto: validate  # 운영에서는 검증만
    show-sql: false

  # ===================================================================
  # Spring Security Configuration (운영 환경)
  # ===================================================================
  security:
    user:
      name: your_admin_username
      password: your_strong_password

logging:
  level:
    root: INFO
    com.btg: INFO
    org.hibernate: WARN

  # 파일 로깅 활성화
  file:
    name: logs/bloomtoget.log

# DevTools 비활성화
spring.devtools:
  restart:
    enabled: false
  livereload:
    enabled: false
